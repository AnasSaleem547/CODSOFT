#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <string.h>

#define FIFO_FILE "/tmp/myfifo"

int main() {
    int fd;
    char buffer[BUFSIZ];
    ssize_t num_bytes;

    // Open the named pipe for reading (consumer)
    fd = open(FIFO_FILE, O_RDONLY);
    if (fd == -1) {
        perror("open");
        exit(EXIT_FAILURE);
    }

    printf("Consumer started. Waiting for messages...\n");

    // Consumer loop
    while (1) {
        // Read input from the named pipe
        num_bytes = read(fd, buffer, BUFSIZ);
        if (num_bytes == -1) {
            perror("read");
            exit(EXIT_FAILURE);
        } else if (num_bytes == 0) {
            // No more data, producer has closed the pipe
            printf("Producer has closed the pipe. Exiting.\n");
            break;
        } else {
            // Null-terminate the string and print it
            buffer[num_bytes] = '\0';
            printf("Received: %s", buffer);

            // Check for exit condition
            if (strncmp(buffer, "exit", 4) == 0) {
                printf("Exit command received. Exiting.\n");
                break;
            }
        }
    }

    close(fd); // Close the named pipe

    return 0;
}
